{
  "layer": "top",
  "position": "top",
  "height": 32,

  "modules-left": ["sway/workspaces", "sway/mode", "sway/window"],
  "modules-center": [],
  "modules-right": ["sway/language", "pulseaudio", "backlight", "battery", "clock", "tray"],

  "sway/window": {
      "max-length": 45,
      "format": "{title}",
      "icon": true,
      "rewrite": {
        "(.*) . Mozilla Firefox": "$1",
        "Telegram \\(.*\\)": "Telegram"
      }
  },

  "sway/workspaces": {
      "format": "{icon}",
      "format-icons": {
          "1": "  ",
          "2": "  ",
          "3": "  ",
          "4": "  ",
          "5": "  ",
          "6": "  ",
          "default": "  "
      }
  },

  "sway/language": {
  },

  "pulseaudio": {
      "format": "{volume}% {icon}",
      "format-bluetooth": "{volume}%  [{desc}]",
      "format-muted": "",
      "format-icons": {
          "headphone": "",
          "hands-free": "",
          "headset": "",
          "phone": "",
          "portable": "",
          "car": "",
          "default": ["", ""]
      },
      "scroll-step": 1,
      "on-click": "pavucontrol"
  },

  "backlight": {
      "device": "intel_backlight",
      "format": "{icon} {percent}%",
      "format-icons": ["", ""]
  },

  "battery": {
      "format": "{icon} {capacity}%",
      "format-icons": ["", "", "", "", ""]
  },

  "clock": {
      "interval": 1,
      "format": "  {:%H:%M:%S}",
      "format-alt": "  {:%a, %d. %b  %H:%M}"
  },

  "tray": {
      "icon-size": 20,
      "spacing": 10
  }
}

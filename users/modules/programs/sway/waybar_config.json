{
    "layer": "top",
    "position": "bottom",
    "height": 35,

    "modules-left": ["sway/workspaces", "sway/mode"],
    "modules-center": ["sway/window"],
    "modules-right": ["pulseaudio", "backlight", "battery", "clock", "tray"],

    "sway/window": {
        "max-length": 50
    },

    "sway/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "1": "  ",
            "2": "  ",
            "3": "  ",
            "4": "  ",
            "5": "  ",
            "6": "  ",
            "default": "  "
        }
    },

    "pulseaudio": {
        "format": "{volume}% {icon}",
        "format-bluetooth": "{volume}%  [{desc}]",
        "format-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", ""]
        },
        "scroll-step": 1,
        "on-click": "pavucontrol"
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["", ""]
    },

    "battery": {
        "format": "{icon} {capacity}%",
        "format-icons": ["", "", "", "", ""]
    },

    "clock": {
        "format-alt": "  {:%a, %d. %b  %H:%M}"
    },

    "tray": {
        "icon-size": 20,
        "spacing": 10
    }
}
